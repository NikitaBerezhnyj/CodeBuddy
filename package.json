{
  "name": "code-buddy-sidekick",
  "displayName": "Code Buddy",
  "description": "The Code Buddy extension adds a friend named Code Buddy to VS Code. He will react to errors in your code and watch when you start entering new code so that you don't make mistakes.",
  "version": "1.0.0",
  "publisher": "NikitaBerezhnyj",
  "homepage": "https://github.com/NikitaBerezhnyj/Code_Buddy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NikitaBerezhnyj/Code_Buddy"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Visualization"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#191919",
    "theme": "dark"
  },
  "keywords": [
    "code buddy",
    "visualization",
    "fun",
    "friendly",
    "companion",
    "errors",
    "error lens",
    "error count"
  ],
  "__metadata": {
    "publisherDisplayName": "NikitaBerezhnyj"
  },
  "activationEvents": [
    "onCommand:code-buddy.openview.focus",
    "onView:code-buddy.openview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "custom-activitybar",
          "title": "Code Buddy",
          "icon": "assets/logo_bito.svg"
        }
      ]
    },
    "views": {
      "custom-activitybar": [
        {
          "type": "webview",
          "id": "code-buddy.openview",
          "name": "Code Buddy",
          "contextualTitle": "Code Buddy"
        }
      ]
    },
    "configuration": {
      "title": "Code Buddy",
      "properties": {
        "Code Buddy.error.usewarnings": {
          "type": "boolean",
          "default": false,
          "description": "Should take in account warnings"
        }
      }
    },
    "commands": [
      {
        "command": "code-buddy.openview.focus",
        "category": "Code Buddy",
        "title": "Open Sidebar",
        "icon": "$(clear-all)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "format": "prettier --write src",
    "build": "vsce package",
    "package": "shx mv README.md README.md.bak && shx cp docs/README.md README.md && npm run compile && npm run build && shx rm README.md && shx mv README.md.bak README.md"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^11.0.1",
    "prettier": "^3.4.2",
    "shx": "^0.4.0",
    "typescript": "^4.4.3"
  }
}
